{
  "manifest_version": 3,
  "name": "LiteAPI Hotel Search",
  "version": "2.0",
  "description": "Search hotels and see top hotels on hover",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://api.liteapi.travel/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  }
}